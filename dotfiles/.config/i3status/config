# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        # colors = true
        interval = 5
        markup = "pango"
        output_format = "i3bar"
}

order += "cpu_usage"
order += "load"
order += "disk /"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume default"
order += "battery all"
order += "tztime local"
order += "tztime brasil"
order += "tztime utc"
order += "tztime chisinau"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

volume default {
        format = "Volume %volume"
        device = "default"
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "<span foreground='#00ff80'>%a %d %b %Y %H:%M:%S Raleigh</span>"
        # format_time = 
        timezone = US/Eastern
}

# tztime brasil {
#         format = "<span foreground='#0080ff'>%H:%M:%S Campinas</span>"
#         timezone = America/Sao_Paulo
# }

tztime utc {
        format = "<span foreground='#ff4040'>%H:%M:%S UTC</span>"
        timezone = UTC
}


tztime chisinau {
        format = "<span foreground='#00ffff'>%H:%M:%S Chisinau</span>"
        timezone = Europe/Chisinau
}


disk "/" {
        format = "disk %avail avail"
}

cpu_usage {
	format = "cpu: %usage"
}

load {
	format = "load %1min/%5min/%15min"
}
